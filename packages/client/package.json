{
  "name": "@qendil/client",
  "version": "0.1.0",
  "description": "The client for the qendil game",
  "author": "Said Dermoumi <hi@sdrm.me>",
  "private": true,
  "license": "../LICENSE",
  "main": "index.html",
  "scripts": {
    "dev:web": "vite",
    "build:electron": "cordova build electron --no-telemetry --release",
    "build:macos": "pnpm build:electron --buildConfig=$PWD/cordova/electron/macos.json",
    "build:linux": "pnpm build:electron --buildConfig=$PWD/cordova/electron/linux.json",
    "build:windows": "pnpm build:electron --buildConfig=%cd%\\cordova\\electron\\windows.json",
    "build:android": "cordova build android --no-telemetry --release",
    "build:web": "vite build && zx ../../scripts/cleanup-source-maps.mjs",
    "preview:web": "vite preview",
    "preview:electron": "cordova run electron --nobuild",
    "preview:android": "cordova run android",
    "preview:ios": "cordova run ios",
    "prepare:cordova": "cordova prepare --no-telemetry",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "zx ../../scripts/typecheck.mjs && eslint --cache --max-warnings=0 . && prettier --cache -c .",
    "lint:types": "zx ../../scripts/typecheck.mjs",
    "lint:format": "prettier --cache -c .",
    "lint:format-fix": "prettier --cache -wl .",
    "lint:eslint": "eslint --cache --max-warnings=0 .",
    "lint:eslint-fix": "eslint --cache --fix --max-warnings=0 .",
    "lint:staged": "zx ../../scripts/typecheck.mjs && lint-staged && vitest run --changed"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.3.1",
    "@qendil/core": "workspace:*",
    "@qendil/client-workers": "workspace:*",
    "@sentry/react": "^7.5.0",
    "@types/babel__core": "^7.1.19",
    "@types/ejs": "^3.1.1",
    "@types/git-rev": "^0.2.0",
    "@types/html-minifier-terser": "^6.1.0",
    "@types/node": "^17.0.38",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.6",
    "@types/three": "^0.141.0",
    "@vitejs/plugin-react": "^1.3.2",
    "classnames": "^2.3.1",
    "git-rev": "^0.2.1",
    "postcss": "^8.4.14",
    "postcss-nesting": "^10.1.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.142.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-pwa": "^0.12.2",
    "vite-plugin-react-remove-attributes": "^1.0.2",
    "vite-plugin-sentry": "^1.1.0",
    "workbox-window": "^6.5.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.14.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/testing-library__jest-dom": "^5.14.5",
    "c8": "^7.11.3",
    "electron-devtools-installer": "^3.2.0",
    "jsdom": "^20.0.0",
    "vitest": "^0.18.0"
  },
  "optionalDependencies": {
    "cordova": "^11.0.0",
    "cordova-android": "^10.1.2",
    "cordova-electron": "^3.1.0",
    "cordova-ios": "^6.2.0",
    "cordova-plugin-statusbar": "^3.0.0",
    "libxmljs": "^0.19.10"
  },
  "cordova": {
    "platforms": [
      "electron",
      "android",
      "ios"
    ],
    "plugins": {
      "cordova-plugin-statusbar": {}
    }
  }
}
