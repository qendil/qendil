{
  "compilerOptions": {
    "composite": true,
    "outDir": "ts-out/node",
    "noEmit": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["WebWorker"],
    "types": []
  },
  "include": [
    "lint-staged.config.mjs",
    "scripts/*.mjs",
    "**/vite.config.ts",
    "**/vitest.config.ts",
    "**/package.json",
    "**/cordova/hooks/*.js"
  ],
  "exclude": ["node_modules"]
}
