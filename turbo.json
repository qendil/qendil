{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["www/**", "pkg/**"]
    },
    "build:web": {
      "dependsOn": ["^build"],
      "outputs": ["www/**", "pkg/**"]
    },
    "prepare:cordova": {
      "dependsOn": ["build:web"],
      "outputs": ["platforms/**"]
    },
    "build:macos": {
      "dependsOn": ["prepare:cordova"],
      "outputs": ["dist/**"]
    },
    "build:linux": {
      "dependsOn": ["prepare:cordova"],
      "outputs": ["dist/**"]
    },
    "build:windows": {
      "dependsOn": ["prepare:cordova"],
      "outputs": ["dist/**"]
    },
    "build:ios": {
      "dependsOn": ["prepare:cordova"],
      "outputs": ["dist/**"]
    },
    "build:android": {
      "dependsOn": ["prepare:cordova"],
      "outputs": ["dist/**"]
    },
    "preview:web": {
      "dependsOn": ["build:web"]
    },
    "preview:electron": {},
    "preview:ios": {},
    "preview:android": {},
    "dev": {
      "cache": false
    },
    "lint:practices": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"]
    },
    "lint:types": {
      "dependsOn": ["^build"]
    },
    "lint:format": {},
    "lint": {
      "dependsOn": ["lint:practices", "lint:types", "lint:format"]
    },
    "lint:practices-fix": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"]
    },
    "lint:types-fix": {
      "dependsOn": ["^build"]
    },
    "lint:format-fix": {},
    "lint:fix": {
      "dependsOn": ["lint:practices-fix", "lint:types-fix", "lint:format-fix"]
    },
    "lint:staged": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:cov": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false
    }
  },
  "globalDependencies": [".env", "tsconfig.json", "tsconfig.common.json"]
}
