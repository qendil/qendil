{
  "name": "qendil",
  "author": "Said Dermoumi <hi@sdrm.me>",
  "license": "./LICENSE",
  "scripts": {
    "lint": "zx scripts/typecheck.mjs && eslint --cache --max-warnings=0 . && prettier --cache -c .",
    "lint:types": "zx scripts/typecheck.mjs",
    "lint:format": "prettier --cache -c .",
    "lint:practices": "eslint --cache --max-warnings=0 .",
    "lint:fix": "zx scripts/typecheck.mjs && prettier --cache -wl . && eslint --cache --fix --max-warnings=0 .",
    "test": "pnpm -r test",
    "test:cov": "pnpm -r --stream test:cov",
    "prepare": "husky install",
    "release": "zx scripts/release.mjs"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.3.0"
  },
  "volta": {
    "node": "16.15.1"
  },
  "workspaces": [
    "client",
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "libxmljs": "^0.19.10",
    "minimist": "^1.2.6",
    "zx": "^7.0.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "esbuild": "^0.14.45",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-unicorn": "^42.0.0",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
