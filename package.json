{
  "name": "qendil",
  "author": "Said Dermoumi <hi@sdrm.me>",
  "license": "./LICENSE",
  "scripts": {
    "dev:web": "turbo run dev --filter=client --filter=core",
    "build:web": "turbo run build:web --filter=client",
    "build:macos": "turbo run build:macos --filter=client",
    "build:linux": "turbo run build:linux --filter=client",
    "build:windows": "turbo run build:windows --filter=client",
    "build:ios": "turbo run build:ios --filter=client",
    "build:android": "turbo run build:android --filter=client",
    "preview:web": "turbo run preview:web --filter=client",
    "preview:electron": "turbo run preview:electron --filter=client",
    "preview:ios": "turbo run preview:ios --filter=client",
    "preview:android": "turbo run preview:android --filter=client",
    "lint": "turbo run build && zx scripts/typecheck.mjs && eslint --cache --max-warnings=0 . && prettier --cache -c .",
    "lint:types": "turbo run build && zx scripts/typecheck.mjs",
    "lint:format": "turbo run build && prettier --cache -c .",
    "lint:practices": "turbo run build && eslint --cache --max-warnings=0 .",
    "lint:fix": "turbo run build && zx scripts/typecheck.mjs && prettier --cache -wl . && eslint --cache --fix --max-warnings=0 .",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "prepare": "husky install",
    "release": "zx scripts/release.mjs"
  },
  "packageManager": "pnpm@7.2.1",
  "engines": {
    "node": ">=v16.15.1",
    "pnpm": ">=7.2.1"
  },
  "volta": {
    "node": "16.15.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "libxmljs": "^0.19.10",
    "minimist": "^1.2.6",
    "turbo": "^1.2.16",
    "zx": "^7.0.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^1.1.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "esbuild": "^0.14.45",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-unicorn": "^42.0.0",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
